
{
  "entities": {
    "Organization": {
      "title": "Organization",
      "description": "Representa una empresa o entidad independiente dentro del ecosistema (Edificio).",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string", "enum": ["importer", "distributor", "wholesaler", "retailer"] },
        "status": { "type": "string", "enum": ["active", "suspended", "pending"] },
        "slug": { "type": "string", "description": "Identificador único para URLs." },
        "ownerId": { "type": "string", "description": "UID del usuario administrador principal." },
        "parentOrgId": { "type": "string", "description": "ID de la organización superior en la jerarquía (opcional)." },
        "createdAt": { "type": "string", "format": "date-time" },
        "contactEmail": { "type": "string" },
        "phone": { "type": "string" },
        "address": { "type": "string" }
      },
      "required": ["id", "name", "type", "status", "ownerId", "createdAt"]
    },
    "OrganizationConnection": {
      "title": "OrganizationConnection",
      "description": "Vinculo comercial entre dos organizaciones dentro de la plataforma.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "fromOrgId": { "type": "string", "description": "ID de la organización que solicita la conexión." },
        "toOrgId": { "type": "string", "description": "ID de la organización que recibe la solicitud." },
        "status": { "type": "string", "enum": ["pending", "accepted", "rejected"] },
        "type": { "type": "string", "enum": ["supplier-client"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["fromOrgId", "toOrgId", "status", "type", "createdAt"]
    },
    "UserProfile": {
      "title": "UserProfile",
      "description": "Perfil de usuario que almacena datos comerciales y el rol asignado.",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "businessName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["client", "admin", "superadmin", "picker", "purchaser", "salesperson"] },
        "status": { "type": "string", "enum": ["active", "pending_approval", "blocked"] },
        "organizationId": { "type": "string", "description": "ID de la organización a la que pertenece." },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["uid", "email", "role", "status", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/organizations/{orgId}": {
      "schema": { "$ref": "#/entities/Organization" },
      "description": "Registro central de empresas en el ecosistema."
    },
    "/connections/{connId}": {
      "schema": { "$ref": "#/entities/OrganizationConnection" },
      "description": "Vínculos comerciales entre edificios."
    },
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Colección principal de usuarios y perfiles."
    }
  }
}
