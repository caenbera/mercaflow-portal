{
  "entities": {
    "UserProfile": {
      "title": "UserProfile",
      "description": "Perfil de usuario que almacena datos comerciales y el rol asignado (client, admin, superadmin, picker, purchaser, salesperson).",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "businessName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["client", "admin", "superadmin", "picker", "purchaser", "salesperson"] },
        "status": { "type": "string", "enum": ["active", "pending_approval", "blocked"] },
        "rewardPoints": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["uid", "businessName", "email", "role", "status", "createdAt"]
    },
    "Product": {
      "title": "Product",
      "description": "Producto del catálogo mayorista.",
      "type": "object",
      "properties": {
        "sku": { "type": "string" },
        "name": { "type": "object" },
        "salePrice": { "type": "number" },
        "stock": { "type": "number" },
        "active": { "type": "boolean" }
      },
      "required": ["sku", "name", "salePrice", "stock", "active"]
    },
    "Order": {
      "title": "Order",
      "description": "Pedido realizado por un cliente minorista.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "total": { "type": "number" },
        "status": { "type": "string", "enum": ["pending", "processing", "shipped", "delivered", "cancelled"] }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Colección principal de usuarios y perfiles."
    },
    "/products/{productId}": {
      "schema": { "$ref": "#/entities/Product" },
      "description": "Catálogo global de productos."
    },
    "/orders/{orderId}": {
      "schema": { "$ref": "#/entities/Order" },
      "description": "Pedidos de clientes."
    },
    "/suppliers/{supplierId}": {
      "description": "Gestión de proveedores.",
      "schema": "object"
    },
    "/prospects/{prospectId}": {
      "description": "Prospectos de ventas para vendedores.",
      "schema": "object"
    },
    "/supportTickets/{ticketId}": {
      "description": "Tickets de soporte técnico.",
      "schema": "object"
    }
  }
}
