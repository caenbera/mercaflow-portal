
{
  "entities": {
    "Organization": {
      "title": "Organization",
      "description": "Representa una empresa o entidad independiente dentro del ecosistema (Edificio).",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string", "enum": ["importer", "distributor", "wholesaler", "retailer"] },
        "status": { "type": "string", "enum": ["active", "suspended", "pending"] },
        "slug": { "type": "string", "description": "Identificador único para URLs de tienda." },
        "ownerId": { "type": "string", "description": "UID del usuario administrador principal." },
        "createdAt": { "type": "string", "format": "date-time" },
        "contactEmail": { "type": "string" },
        "phone": { "type": "string" },
        "address": { "type": "string" },
        "storeConfig": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "themeColor": { "type": "string" },
            "welcomeMessage": { "type": "string" },
            "logoUrl": { "type": "string" },
            "allowDelivery": { "type": "boolean" },
            "minOrderAmount": { "type": "number" },
            "testimonialAvatars": {
              "type": "object",
              "properties": {
                "t1": { "type": "string" },
                "t2": { "type": "string" },
                "t3": { "type": "string" }
              }
            }
          }
        }
      },
      "required": ["id", "name", "type", "status", "ownerId", "createdAt", "slug"]
    },
    "DriverProfile": {
      "title": "DriverProfile",
      "description": "Perfil de un transportista asignado a una organización.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "organizationId": { "type": "string" },
        "userId": { "type": "string" },
        "name": { "type": "string" },
        "phone": { "type": "string" },
        "email": { "type": "string" },
        "type": { "type": "string", "enum": ["internal", "external"] },
        "vehicleInfo": { "type": "string" },
        "status": { "type": "string", "enum": ["active", "inactive"] },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    },
    "Route": {
      "title": "Route",
      "description": "Hoja de ruta asignada a un conductor.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "organizationId": { "type": "string" },
        "driverId": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "active", "completed"] },
        "stops": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "orderId": { "type": "string" },
              "status": { "type": "string", "enum": ["pending", "delivered", "failed"] },
              "sequence": { "type": "number" }
            }
          }
        }
      }
    },
    "UserProfile": {
      "title": "UserProfile",
      "description": "Perfil de usuario que almacena datos comerciales y el rol asignado.",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["client", "admin", "superadmin", "picker", "purchaser", "salesperson", "driver"] },
        "organizationId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["uid", "email", "role", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/organizations/{orgId}": {
      "schema": { "$ref": "#/entities/Organization" },
      "description": "Registro central de empresas."
    },
    "/drivers/{driverId}": {
      "schema": { "$ref": "#/entities/DriverProfile" },
      "description": "Perfiles de repartidores por edificio."
    },
    "/routes/{routeId}": {
      "schema": { "$ref": "#/entities/Route" },
      "description": "Rutas logísticas activas e históricas."
    },
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Colección de usuarios."
    }
  }
}
