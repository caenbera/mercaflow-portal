{
  "entities": {
    "Organization": {
      "title": "Organization",
      "description": "Representa una empresa o entidad independiente dentro del ecosistema (Edificio).",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string", "enum": ["importer", "distributor", "wholesaler", "retailer"] },
        "status": { "type": "string", "enum": ["active", "suspended", "pending"] },
        "slug": { "type": "string", "description": "Identificador único para URLs de tienda." },
        "ownerId": { "type": "string", "description": "UID del usuario administrador principal." },
        "createdAt": { "type": "string", "format": "date-time" },
        "contactEmail": { "type": "string" },
        "phone": { "type": "string" },
        "address": { "type": "string" },
        "storeConfig": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "themeColor": { "type": "string" },
            "welcomeMessage": { "type": "string" },
            "logoUrl": { "type": "string" },
            "allowDelivery": { "type": "boolean" },
            "minOrderAmount": { "type": "number" }
          }
        }
      },
      "required": ["id", "name", "type", "status", "ownerId", "createdAt", "slug"]
    },
    "OrganizationConnection": {
      "title": "OrganizationConnection",
      "description": "Vinculo comercial entre dos organizaciones dentro de la plataforma.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "fromOrgId": { "type": "string" },
        "toOrgId": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "accepted", "rejected"] },
        "type": { "type": "string", "enum": ["supplier-client"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["fromOrgId", "toOrgId", "status", "type", "createdAt"]
    },
    "UserProfile": {
      "title": "UserProfile",
      "description": "Perfil de usuario que almacena datos comerciales y el rol asignado.",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["client", "admin", "superadmin", "picker", "purchaser", "salesperson"] },
        "organizationId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["uid", "email", "role", "createdAt"]
    },
    "FAQ": {
      "title": "FAQ",
      "description": "Pregunta frecuente gestionable por la organización.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "organizationId": { "type": "string" },
        "question": {
          "type": "object",
          "properties": {
            "es": { "type": "string" },
            "en": { "type": "string" }
          }
        },
        "answer": {
          "type": "object",
          "properties": {
            "es": { "type": "string" },
            "en": { "type": "string" }
          }
        },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["organizationId", "question", "answer"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/organizations/{orgId}": {
      "schema": { "$ref": "#/entities/Organization" },
      "description": "Registro central de empresas."
    },
    "/connections/{connId}": {
      "schema": { "$ref": "#/entities/OrganizationConnection" },
      "description": "Vínculos comerciales entre edificios."
    },
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Colección de usuarios."
    },
    "/products/{prodId}": {
      "schema": { "$ref": "#/entities/Product" },
      "description": "Catálogo de productos segregado por organización."
    },
    "/faqs/{faqId}": {
      "schema": { "$ref": "#/entities/FAQ" },
      "description": "Preguntas frecuentes del portal de soporte."
    }
  }
}