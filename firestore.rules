rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * MERCAFLOW PORTAL - REGLAS DE SEGURIDAD
     */

    function isAuthed() {
      return request.auth != null;
    }

    // Obtener datos del usuario actual
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Verificar si es superadmin (basado en el campo 'role' del documento de usuario)
    function isSuperAdmin() {
      return isAuthed() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             getUserData().role == 'superadmin';
    }

    // Verificar si es admin o superadmin
    function isAdmin() {
      return isAuthed() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             getUserData().role in ['admin', 'superadmin'];
    }

    // Permisos de compras
    function hasPurchasingRole() {
      return isAuthed() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             getUserData().role in ['admin', 'superadmin', 'purchaser'];
    }

    // Permisos de almacén/picking
    function hasPickingRole() {
      return isAuthed() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             getUserData().role in ['admin', 'superadmin', 'picker'];
    }

    // Permisos de ventas
    function hasSalesRole() {
      return isAuthed() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             getUserData().role in ['admin', 'superadmin', 'salesperson'];
    }

    /**
     * USUARIOS
     */
    match /users/{userId} {
      allow get: if isAuthed() && (request.auth.uid == userId || isSuperAdmin());
      allow list: if isSuperAdmin();
      allow create: if isAuthed() && request.auth.uid == userId;
      allow update: if isAuthed() && (
        (request.auth.uid == userId && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role'])) ||
        isSuperAdmin()
      );
      allow delete: if isSuperAdmin();

      match /notifications/{id} { allow read, write: if request.auth.uid == userId; }
      match /branches/{id} { allow read, write: if request.auth.uid == userId; }
      match /notes/{id} { allow read, write: if isAdmin(); }
      match /rewardsActivity/{id} { allow read: if request.auth.uid == userId || isAdmin(); }
    }

    /**
     * PRODUCTOS Y CATÁLOGO
     */
    match /products/{id} {
      allow read: if isAuthed();
      allow write: if hasPurchasingRole();
    }
    match /productCategories/{id} { allow read: if isAuthed(); allow write: if isAdmin(); }
    match /productUnits/{id} { allow read: if isAuthed(); allow write: if isAdmin(); }

    /**
     * PEDIDOS
     */
    match /orders/{id} {
      allow get: if isAuthed() && (resource.data.userId == request.auth.uid || hasPickingRole());
      allow list: if isAuthed() && (isAdmin() || hasPickingRole() || hasSalesRole());
      allow create: if isAuthed() && request.resource.data.userId == request.auth.uid;
      allow update: if hasPickingRole();
      allow delete: if isAdmin();
    }

    /**
     * PROVEEDORES
     */
    match /suppliers/{id} {
      allow read, write: if hasPurchasingRole();
    }
    match /purchaseOrders/{id} {
      allow read, write: if hasPurchasingRole();
    }

    /**
     * VENTAS Y PROSPECTOS
     */
    match /prospects/{id} {
      allow read, update: if hasSalesRole() && (resource.data.salespersonId == request.auth.uid || isAdmin());
      allow create: if hasSalesRole();
      allow delete: if isAdmin();
      match /visits/{vId} { allow read, write: if hasSalesRole(); }
    }

    /**
     * SOPORTE Y FACTURACIÓN
     */
    match /supportTickets/{id} {
      allow create: if isAuthed();
      allow read, update: if isAdmin() || (isAuthed() && resource.data.userId == request.auth.uid);
    }
    match /invoices/{id} {
      allow read: if isAuthed() && resource.data.userId == request.auth.uid;
      allow write: if isAdmin();
    }

    /**
     * RECOMPENSAS Y SISTEMA
     */
    match /rewardTiers/{id} { allow read: if isAuthed(); allow write: if isAdmin(); }
    match /rewards/{id} { allow read: if isAuthed(); allow write: if isAdmin(); }
    match /rewardRules/{id} { allow read, write: if isAdmin(); }
    match /pricelists/{id} { allow read: if isAuthed(); allow write: if isAdmin(); }
    match /offers/{id} { allow read: if isAuthed(); allow write: if isAdmin(); }
    match /offerCategories/{id} { allow read: if isAuthed(); allow write: if isAdmin(); }
    match /adminInvites/{email} { allow read, write: if isSuperAdmin(); allow get: if !isAuthed(); }
  }
}
