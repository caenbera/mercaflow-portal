
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * FUNCIONES GLOBALES DE SEGURIDAD
     */
    
    // Verifica si el usuario está autenticado
    function isSignedIn() {
      return request.auth != null;
    }

    // Verifica si el correo es el del Super Admin principal
    function isEmailSuperAdmin() {
      return isSignedIn() && request.auth.token.email == 'caenbera@gmail.com';
    }

    // Verifica si el usuario tiene el rol de superadmin en su perfil
    function isSuperAdmin() {
      return isEmailSuperAdmin() || (
        isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin'
      );
    }

    // Obtiene los datos del perfil del usuario actual
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Verifica si el usuario pertenece al staff de una organización específica
    function isOrgStaff(orgId) {
      return isSignedIn() && (
        isSuperAdmin() ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         getUserData().organizationId == orgId)
      );
    }

    /**
     * LOGÍSTICA (DRIVERS & ROUTES)
     */
    match /drivers/{id} {
      allow read: if isSignedIn() && (
        isSuperAdmin() || 
        (resource != null && resource.data.organizationId == getUserData().organizationId) || 
        (resource != null && resource.data.userId == request.auth.uid)
      );
      allow write: if isSignedIn() && (
        isSuperAdmin() || 
        (request.resource.data.organizationId == getUserData().organizationId)
      );
    }

    match /routes/{id} {
      allow read: if isSignedIn() && (
        isSuperAdmin() || 
        (resource != null && resource.data.organizationId == getUserData().organizationId) || 
        (resource != null && resource.data.driverId == request.auth.uid)
      );
      allow update: if isSignedIn() && (
        isSuperAdmin() || 
        (resource != null && resource.data.organizationId == getUserData().organizationId) || 
        (resource != null && resource.data.driverId == request.auth.uid)
      );
      allow create, delete: if isSignedIn() && (
        isSuperAdmin() || 
        (request.resource.data.organizationId == getUserData().organizationId)
      );
    }

    /**
     * ORGANIZACIONES
     */
    match /organizations/{orgId} {
      allow read: if true;
      allow create: if isSuperAdmin();
      allow update: if isSuperAdmin() || (isSignedIn() && get(/databases/$(database)/documents/organizations/$(orgId)).data.ownerId == request.auth.uid);
      allow delete: if isSuperAdmin();
    }

    /**
     * PEDIDOS
     */
    match /orders/{id} {
      allow read, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
    }

    /**
     * PRODUCTOS Y PROSPECTOS
     */
    match /products/{id} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /prospects/{id} {
      allow read, write: if isSignedIn();
      match /visits/{visitId} {
        allow read, write: if isSignedIn();
      }
    }

    /**
     * USUARIOS
     */
    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
      allow list: if isSuperAdmin();
      allow write: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
      
      match /{allSubcollections=**} {
        allow read, write: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
      }
    }

    /**
     * REGLA GLOBAL PARA SUPERADMIN
     */
    match /{path=**} {
      allow read, write: if isSuperAdmin();
    }
  }
}
