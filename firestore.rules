
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * FUNCIONES GLOBALES DE SEGURIDAD
     */
    function isAuthed() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isAuthed() && (
        request.auth.token.email == 'caenbera@gmail.com' || 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin')
      );
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function userExists() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    // Verifica si el usuario es el dueño legal de una organización específica
    function isOrgOwner(orgId) {
      return isAuthed() && (
        get(/databases/$(database)/documents/organizations/$(orgId)).data.ownerId == request.auth.uid
      );
    }

    // Verifica si el usuario pertenece al staff de esa organización
    function isOrgStaff(orgId) {
      return isAuthed() && userExists() && getUserData().organizationId == orgId;
    }

    /**
     * ORGANIZACIONES (EDIFICIOS)
     */
    match /organizations/{orgId} {
      allow read: if true; // Publico para landing pages
      allow create: if isSuperAdmin();
      allow update: if isSuperAdmin() || isOrgOwner(orgId);
      allow delete: if isSuperAdmin();
    }

    /**
     * PRODUCTOS (Catálogo público para B2C)
     */
    match /products/{id} {
      allow read: if true; 
      allow write: if isSuperAdmin() || isOrgStaff(request.resource.data.organizationId) || isOrgOwner(request.resource.data.organizationId);
    }

    /**
     * PEDIDOS
     */
    match /orders/{id} {
      allow read: if isAuthed() && (
        resource.data.userId == request.auth.uid || 
        isOrgStaff(resource.data.organizationId) || 
        isOrgOwner(resource.data.organizationId) ||
        isSuperAdmin()
      );
      allow list: if isAuthed() && (
        isSuperAdmin() ||
        request.auth.uid == request.auth.uid // Simplificado para permitir consultas propias
      );
      allow create: if isAuthed();
      allow update: if isSuperAdmin() || isOrgStaff(resource.data.organizationId) || isOrgOwner(resource.data.organizationId);
    }

    /**
     * USUARIOS Y PERFILES
     */
    match /users/{userId} {
      allow get: if isAuthed() && (request.auth.uid == userId || isSuperAdmin());
      allow list: if isSuperAdmin();
      allow create: if isAuthed() && request.auth.uid == userId;
      allow update: if isAuthed() && (request.auth.uid == userId || isSuperAdmin());
      
      match /{allSubcollections=**} {
        allow read, write: if isAuthed() && (request.auth.uid == userId || isSuperAdmin());
      }
    }

    /**
     * NEWSLETTER
     */
    match /newsletterSubscribers/{id} {
      allow create: if true;
      allow read: if isSuperAdmin() || isOrgOwner(resource.data.organizationId);
    }

    // Invitaciones de Admin
    match /adminInvites/{email} {
      allow read: if true; 
      allow write: if isSuperAdmin();
    }

    // Regla de respaldo para el Super Admin
    match /{path=**} {
      allow read, write: if isSuperAdmin();
    }
  }
}
