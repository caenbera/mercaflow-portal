
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * MERCAFLOW PORTAL - REGLAS DE PRIVACIDAD MULTI-EDIFICIO
     */

    function isAuthed() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function userExists() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function isSuperAdmin() {
      return isAuthed() && userExists() && getUserData().role == 'superadmin';
    }

    // Verifica si el usuario es el dueño legal del edificio (organización)
    function isOrgOwner(orgId) {
      return isAuthed() && get(/databases/$(database)/documents/organizations/$(orgId)).data.ownerId == request.auth.uid;
    }

    // Verifica si el usuario pertenece al staff de esa organización
    function isOrgStaff(orgId) {
      return isAuthed() && userExists() && getUserData().organizationId == orgId;
    }

    /**
     * ORGANIZACIONES (EDIFICIOS)
     */
    match /organizations/{orgId} {
      // Público: Solo permitir lectura de la info básica de tienda para el slug
      allow read: if true; 
      allow write: if isSuperAdmin();
      allow update: if isOrgOwner(orgId) || isSuperAdmin();
    }

    /**
     * PRODUCTOS - ACCESO PÚBLICO B2C
     */
    match /products/{id} {
      // Regla B2C: Permitir lectura pública si la organización dueña tiene la tienda activada
      allow read: if (isAuthed() && (isOrgStaff(resource.data.organizationId) || isOrgOwner(resource.data.organizationId))) 
                  || (get(/databases/$(database)/documents/organizations/$(resource.data.organizationId)).data.storeConfig.enabled == true);
      
      allow write: if isAuthed() && (isOrgStaff(request.resource.data.organizationId) || isOrgOwner(request.resource.data.organizationId));
    }

    /**
     * CONEXIONES
     */
    match /connections/{id} {
      allow read: if isAuthed() && (
        isOrgOwner(resource.data.fromOrgId) || 
        isOrgOwner(resource.data.toOrgId) ||
        isSuperAdmin()
      );
      allow create: if isAuthed() && isOrgOwner(request.resource.data.fromOrgId);
      allow update: if isAuthed() && (isOrgOwner(resource.data.toOrgId) || isSuperAdmin());
      allow delete: if isAuthed() && (isOrgOwner(resource.data.fromOrgId) || isOrgOwner(resource.data.toOrgId));
    }

    /**
     * USUARIOS
     */
    match /users/{userId} {
      allow get: if isAuthed() && (request.auth.uid == userId || isSuperAdmin());
      allow list: if isSuperAdmin();
      allow create: if isAuthed() && request.auth.uid == userId;
      allow update: if isAuthed() && (request.auth.uid == userId || isSuperAdmin());
    }

    match /orders/{id} {
      allow read: if isAuthed() && (
        resource.data.userId == request.auth.uid || 
        isOrgStaff(resource.data.organizationId) || 
        isOrgOwner(resource.data.organizationId)
      );
      allow create: if isAuthed();
      allow update: if isAuthed() && (isOrgStaff(resource.data.organizationId) || isOrgOwner(resource.data.organizationId));
    }

    match /{path=**} {
      allow read, write: if isSuperAdmin();
    }
  }
}
