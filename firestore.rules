
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * MERCAFLOW PORTAL - REGLAS MULTI-ORGANIZACIÓN
     */

    function isAuthed() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isSuperAdmin() {
      return isAuthed() && getUserData().role == 'superadmin';
    }

    // Verifica si el usuario pertenece a una organización específica
    function belongsToOrg(orgId) {
      return isAuthed() && getUserData().organizationId == orgId;
    }

    /**
     * ORGANIZACIONES (EDIFICIOS)
     */
    match /organizations/{orgId} {
      allow read: if isAuthed();
      allow write: if isSuperAdmin();
    }

    /**
     * USUARIOS
     */
    match /users/{userId} {
      allow get: if isAuthed() && (request.auth.uid == userId || isSuperAdmin());
      allow list: if isSuperAdmin();
      allow create: if isAuthed();
      allow update: if isAuthed() && (request.auth.uid == userId || isSuperAdmin());
    }

    /**
     * PRODUCTOS
     */
    match /products/{id} {
      allow read: if isAuthed();
      allow write: if isAuthed() && (isSuperAdmin() || belongsToOrg(resource.data.organizationId));
    }

    /**
     * PEDIDOS
     */
    match /orders/{id} {
      allow read: if isAuthed() && (
        resource.data.userId == request.auth.uid || 
        belongsToOrg(resource.data.organizationId) ||
        isSuperAdmin()
      );
      allow create: if isAuthed();
      allow update: if isAuthed() && (belongsToOrg(resource.data.organizationId) || isSuperAdmin());
    }

    // Reglas generales para otras colecciones
    match /{path=**} {
      allow read, write: if isSuperAdmin();
    }
  }
}
