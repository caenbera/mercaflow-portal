
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * FUNCIONES GLOBALES DE SEGURIDAD
     */
    function isAuthed() {
      return request.auth != null;
    }

    function isEmailSuperAdmin() {
      return isAuthed() && request.auth.token.email == 'caenbera@gmail.com';
    }

    function isSuperAdmin() {
      return isEmailSuperAdmin() || (
        isAuthed() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin'
      );
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function userExists() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function isOrgStaff(orgId) {
      return isAuthed() && (
        isSuperAdmin() ||
        (userExists() && getUserData().organizationId == orgId)
      );
    }

    /**
     * LOG√çSTICA (DRIVERS & ROUTES)
     */
    match /drivers/{id} {
      allow read: if isAuthed() && (isSuperAdmin() || resource.data.organizationId == getUserData().organizationId || resource.data.userId == request.auth.uid);
      allow write: if isAuthed() && (isSuperAdmin() || request.resource.data.organizationId == getUserData().organizationId);
    }

    match /routes/{id} {
      allow read: if isAuthed() && (isSuperAdmin() || resource.data.organizationId == getUserData().organizationId || resource.data.driverId == request.auth.uid);
      allow update: if isAuthed() && (isSuperAdmin() || resource.data.organizationId == getUserData().organizationId || resource.data.driverId == request.auth.uid);
      allow create, delete: if isAuthed() && (isSuperAdmin() || request.resource.data.organizationId == getUserData().organizationId);
    }

    /**
     * ORGANIZACIONES
     */
    match /organizations/{orgId} {
      allow read: if true;
      allow create: if isSuperAdmin();
      allow update: if isSuperAdmin() || (isAuthed() && get(/databases/$(database)/documents/organizations/$(orgId)).data.ownerId == request.auth.uid);
      allow delete: if isSuperAdmin();
    }

    /**
     * PEDIDOS
     */
    match /orders/{id} {
      allow read: if isAuthed();
      allow list: if isAuthed();
      allow create: if isAuthed();
      allow update: if isAuthed();
    }

    /**
     * USUARIOS
     */
    match /users/{userId} {
      allow read: if isAuthed() && (request.auth.uid == userId || isSuperAdmin());
      allow list: if isSuperAdmin();
      allow write: if isAuthed() && (request.auth.uid == userId || isSuperAdmin());
      
      match /{allSubcollections=**} {
        allow read, write: if isAuthed() && (request.auth.uid == userId || isSuperAdmin());
      }
    }

    match /{path=**} {
      allow read, write: if isSuperAdmin();
    }
  }
}
