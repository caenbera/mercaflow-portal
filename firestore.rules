
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin roles from the auth token's custom claims
    function isAdmin() {
      return request.auth.token.admin == true || request.auth.token.superadmin == true;
    }
    
    function isSuperAdmin() {
      return request.auth.token.superadmin == true;
    }

    // USERS Collection
    match /users/{userId} {
      // Any authenticated user can create their own user profile document
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Users can only read their own data
      allow read: if request.auth.uid == userId || isSuperAdmin();
      
      // Users can only update their own data, but superadmins can update anyone's role
      allow update: if request.auth.uid == userId || (isSuperAdmin() && 'role' in request.resource.data);
      
      // Only superadmins can delete users
      allow delete: if isSuperAdmin();
    }

    // PRODUCTS Collection
    match /products/{productId} {
      // Any authenticated user (client) can read products
      allow read: if request.auth != null;
      
      // Only admins and superadmins can create, update, or delete products
      allow write: if isAdmin();
    }

    // ORDERS Collection
    match /orders/{orderId} {
      // Users can create their own orders
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Users can read their own orders. Admins can read all orders.
      allow read: if (request.auth != null && resource.data.userId == request.auth.uid) || isAdmin();
      
      // Admins can update orders (e.g., change status)
      allow update: if isAdmin();
      
      // Only admins can delete orders
      allow delete: if isAdmin();
    }

    // ADMIN INVITES Collection
    match /adminInvites/{email} {
      // Only Super Admins can create or read invites
      allow create, read: if isSuperAdmin();

      // Nobody can update or delete invites through the client, they are single-use
      allow update, delete: if false;
    }
  }
}
